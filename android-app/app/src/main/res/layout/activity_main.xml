<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Верхняя панель с меню, ключом шифрования и кнопками звонков -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="4dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Кнопка меню слева -->
        <ImageButton
            android:id="@+id/sidebarToggleBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu"
            android:scaleType="center"
            android:contentDescription="Меню" />

        <!-- Поле ввода ключа шифрования -->
        <EditText
            android:id="@+id/encryptionKeyInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/edittext_background_light"
            android:hint="Ключ шифрования..."
            android:maxLines="1"
            android:inputType="textPassword"
            android:minHeight="45dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:textColor="#757575"
            android:textColorHint="@color/input_text_light"
            android:textCursorDrawable="@drawable/cursor_color"
            android:drawableEnd="@drawable/ic_clear" />

        <!-- Контейнер для кнопок звонков (справа) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Кнопка аудиозвонка -->
            <ImageButton
                android:id="@+id/audioCallBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_audio_call"
                android:scaleType="center"
                android:contentDescription="Аудиозвонок" />

            <!-- Кнопка видеозвонка -->
            <ImageButton
                android:id="@+id/videoCallBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_video_call"
                android:scaleType="center"
                android:contentDescription="Видеозвонок" />

        </LinearLayout>

    </LinearLayout>

    <!-- RecyclerView для сообщений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chat_background_gradient"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/messageInputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        tools:listitem="@layout/item_message" />

    <!-- Панель ввода сообщения -->
    <LinearLayout
        android:id="@+id/messageInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Поле ввода сообщения -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edittext_background_light"
            android:hint="Введите сообщение..."
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionSend"
            android:inputType="textShortMessage|textCapSentences"
            android:minHeight="45dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:textColor="#757575"
            android:textColorHint="@color/input_text_light"
            android:textCursorDrawable="@drawable/cursor_color" />

        <!-- Контейнер для кнопок записи и прикрепления файла -->
        <LinearLayout
            android:id="@+id/recordButtonsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- Кнопка записи аудио -->
            <ImageButton
                android:id="@+id/recordAudioBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_mic"
                android:scaleType="center"
                android:contentDescription="Запись аудио" />

            <!-- Кнопка записи видео -->
            <ImageButton
                android:id="@+id/recordVideoBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_video"
                android:scaleType="center"
                android:contentDescription="Запись видео" />

            <!-- Кнопка прикрепления файла (теперь в этом контейнере) -->
            <ImageButton
                android:id="@+id/attachFileBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_attach"
                android:scaleType="center"
                android:contentDescription="Прикрепить файл" />

        </LinearLayout>

        <!-- Кнопка отправки сообщения -->
        <ImageButton
            android:id="@+id/sendMessageBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            android:scaleType="center"
            android:contentDescription="Отправить сообщение"
            android:visibility="gone" />

    </LinearLayout>
    <!-- Боковая панель (теперь появляется слева) -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/white"

        android:visibility="gone"
        android:translationX="-280dp"
        app:layout_constraintBottom_toTopOf="@id/messageInputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/light_gray">

            <TextView
                android:id="@+id/sidebarHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Комната: Room_01"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✪ Пользователь"
                android:textSize="14sp"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

        <!-- Список пользователей -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пользователи в комнате:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp" />

        <!-- RecyclerView для списка пользователей -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_user" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/messageInputContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Загрузка файла..."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/button_background" />

    </LinearLayout>
    <!-- Индикатор записи аудио -->
    <FrameLayout
        android:id="@+id/recordingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="100dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <!-- Красный круг -->
            <ImageView
                android:id="@+id/recordingCircle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/circle_red"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:shadowColor="#ff0000"
                android:shadowRadius="5"
                android:padding="20dp" />

            <!-- Время в центре круга -->
            <TextView
                android:id="@+id/recordingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:shadowColor="#ffffff"
                android:shadowRadius="20"
                android:shadowDx="0"
                android:shadowDy="0"
                android:padding="20dp"/>

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>